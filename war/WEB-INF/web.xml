<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

    <!-- Servlets -->
    <!-- Servlets -->
    <servlet>
        <servlet-name>greetServlet</servlet-name>
        <servlet-class>com.bracketbird.server.GreetingServiceImpl</servlet-class>
         <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet>
        <servlet-name>refreshServlet</servlet-name>
        <servlet-class>com.bracketbird.server.RefreshServiceImpl</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>greetServlet</servlet-name>
        <url-pattern>/bracketbird/greet</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>refreshServlet</servlet-name>
        <url-pattern>/bracketbird/refresh</url-pattern>
    </servlet-mapping>


    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>Bracketbird.html</welcome-file>
    </welcome-file-list>

</web-app>
